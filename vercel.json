{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/ocr.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/ocr",
      "dest": "/api/ocr.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
